<div class="container">
  <h1>Weather Forecast</h1>

  <%= form_tag(weather_show_path, method: :get) do %>
    <div class="form-group">
      <label>Enter Zip Code:</label>
      <div class="col-sm-10">
        <%= text_field_tag(:zip_code)  %>
      </div>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Get Forecast</button>
  <% end %>
</div>
